import themes.sbss

#btn_action {
    width: 120dp;
    height: 44dp;
    label-font-family: $SANS_MEDIUM;
    label-font-size: 1.3;
    label-color: $COLOR_BLACK;
    highlighted-label-color: $COLOR_GRAY;
    content-background-color: $COLOR_DARK_WHITE;
}

#effect_fullscreen {
    width: 1pw;
    height: 1ph;
    position: absolute;
    gravity: center;
}

/catalog/actions {
    display: block;
    position: absolute;
    gravity: center;
    text-align: center;
}
