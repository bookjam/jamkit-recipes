import themes.sbss

/catalog/content {
    display: block;
    position: absolute;
    gravity: center;
    font-family: @{$SANS_MEDIUM};
    font-size: 1.3;
    text-align: center;
}

if $ORIENTATION == "portrait"
    #landscape-only {
        display: none;
    }
else
    #portrait-only {
        display: none;
    }
end
